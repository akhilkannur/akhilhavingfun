---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
// Sort by published time (newest first)
blogPosts.sort((a, b) => {
  const aDate = new Date(a.data.publishedTime || 0);
  const bDate = new Date(b.data.publishedTime || 0);
  return bDate.getTime() - aDate.getTime();
});
---

<BaseLayout
  title="Akhil MK"
  description="Akhil MK runs a marketing agency for DTC brands with over 10 years of experience building sales campaigns, e-commerce stores, and AI-powered tools."
>
    <section class="hero">
        <div class="profile-section">
            <div class="profile-image-container">
                <img src="/DP.jpg" alt="Akhil MK" class="profile-image">
            </div>
            <div class="profile-content">
                <h1 class="greeting">
                    <span class="hero-accent" style="position: relative; display: inline-block;">
                        HI
